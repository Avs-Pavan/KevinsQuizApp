<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ResultScreen">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/space_10dp"
        android:elevation="@dimen/space_20dp"
        android:gravity="center"
        android:paddingBottom="@dimen/space_10dp"
        android:text="10/10"
        android:textColor="@color/white"
        android:textSize="@dimen/space_40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id"
        android:layout_margin="@dimen/space_10dp"
        android:elevation="@dimen/space_20dp"
        android:gravity="center"
        android:paddingBottom="@dimen/space_10dp"
        android:text="You are an absolute marvel fan."
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_25dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/rating"
        android:layout_margin="20dp"
        android:elevation="@dimen/space_10dp"
        android:textAllCaps="false"
        android:background="@drawable/surface_bg"
        android:text="Give rating"
        android:textColor="@color/white" />


</RelativeLayout>