<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size5dp"
    android:background="@drawable/surface_bg"
    android:clickable="true"
    android:elevation="@dimen/size15dp"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:gravity="center"
    android:orientation="horizontal"
    android:transitionName="label"
    tools:targetApi="lollipop">

    <TextView
        android:id="@+id/logo"
        android:layout_width="@dimen/space_40dp"
        android:layout_height="@dimen/space_40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/size5dp"
        android:layout_marginBottom="@dimen/size5dp"
        android:background="@drawable/ring"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/space_20dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Label"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>